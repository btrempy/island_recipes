<div>
  <div>
    <h1>
      Recipe #<%= @the_recipe.id %> details
    </h1>

    <div>
      <div>
        <a href="/recipes">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_recipe/<%= @the_recipe.id %>">
          Delete recipe
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Owner
      </dt>
      <dd>
        <%= @the_recipe.owner_id %>
      </dd>

      <dt>
        Category
      </dt>
      <dd>
        <%= @the_recipe.category %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @the_recipe.description %>
      </dd>

      <dt>
        Length to make
      </dt>
      <dd>
        <%= @the_recipe.length_to_make %>
      </dd>

      <dt>
        Picture
      </dt>
      <dd>
        <%= @the_recipe.picture %>
      </dd>

      <dt>
        Food name
      </dt>
      <dd>
        <%= @the_recipe.food_name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_recipe.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_recipe.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit recipe
    </h2>

    <form action="/modify_recipe/<%= @the_recipe.id %>"  method="post" >
      <div>
        <label for="owner_id_box">
          Owner
        </label>

        <input type="text" id="owner_id_box" name="query_owner_id" value="<%= @the_recipe.owner_id %>">
      </div>

      <div>
        <label for="category_box">
          Category
        </label>

        <input type="text" id="category_box" name="query_category" value="<%= @the_recipe.category %>">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <input type="time" id="description_box" name="query_description" value="<%= @the_recipe.description %>">
      </div>

      <div>
        <label for="length_to_make_box">
          Length to make
        </label>

        <input type="time" id="length_to_make_box" name="query_length_to_make" value="<%= @the_recipe.length_to_make %>">
      </div>

      <div>
        <label for="picture_box">
          Picture
        </label>

        <textarea id="picture_box" name="query_picture"><%= @the_recipe.picture %></textarea>
      </div>

      <div>
        <label for="food_name_box">
          Food name
        </label>

        <input type="text" id="food_name_box" name="query_food_name" value="<%= @the_recipe.food_name %>">
      </div>

      <button>
        Update recipe
      </button>
    </form>
  </div>
</div>

<hr>
